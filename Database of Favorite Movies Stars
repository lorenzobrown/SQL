CREATE TABLE tv_shows (id INTEGER PRIMARY KEY,        moviestar_id TEXT, title TEXT, 
    genre TEXT, 
    rotten_tomatoes TEXT, 
    release_year TEXT,
    episodes INTEGER);
    
INSERT INTO tv_shows (moviestar_id, title, genre, rotten_tomatoes, release_year, episodes)
